@page
@model SIMSProject.Pages.Admin.ManageModel
@{
    ViewData["Title"] = "Admin Management";
}

<h1>Admin Management</h1>

@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-4">
            <h3>Export Data</h3>
            <form method="post" asp-page-handler="ExportStudents">
                <button type="submit" class="btn btn-primary">Export Students to CSV</button>
            </form>
            <form method="post" asp-page-handler="ExportTutors">
                <button type="submit" class="btn btn-primary">Export Tutors to CSV</button>
            </form>
            <form method="post" asp-page-handler="ExportCourses">
                <button type="submit" class="btn btn-primary">Export Courses to CSV</button>
            </form>
        </div>
        <div class="col-md-4">
            <h3>Import Data</h3>
            <form method="post" enctype="multipart/form-data" asp-page-handler="ImportStudents">
                <div class="form-group">
                    <label for="studentsFile">Upload Students CSV</label>
                    <input type="file" class="form-control-file" id="studentsFile" name="studentsFile" accept=".csv" />
                </div>
                <button type="submit" class="btn btn-primary">Import Students</button>
            </form>
            <form method="post" enctype="multipart/form-data" asp-page-handler="ImportTutors">
                <div class="form-group">
                    <label for="tutorsFile">Upload Tutors CSV</label>
                    <input type="file" class="form-control-file" id="tutorsFile" name="tutorsFile" accept=".csv" />
                </div>
                <button type="submit" class="btn btn-primary">Import Tutors</button>
            </form>
            <form method="post" enctype="multipart/form-data" asp-page-handler="ImportCourses">
                <div class="form-group">
                    <label for="coursesFile">Upload Courses CSV</label>
                    <input type="file" class="form-control-file" id="coursesFile" name="coursesFile" accept=".csv" />
                </div>
                <button type="submit" class="btn btn-primary">Import Courses</button>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Manage Entities</h3>
            <a asp-page="/Students/Index" class="btn btn-secondary">Manage Students</a>
            <a asp-page="/Tutors/Index" class="btn btn-secondary">Manage Tutors</a>
            <a asp-page="/Courses/Index" class="btn btn-secondary">Manage Courses</a>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        You do not have permission to access this page.
    </div>
}

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}