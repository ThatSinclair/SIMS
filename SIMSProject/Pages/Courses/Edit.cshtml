@page
@model SIMSProject.Pages.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Course.Title"></label>
        <input asp-for="Course.Title" class="form-control" />
        <span asp-validation-for="Course.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Description"></label>
        <input asp-for="Course.Description" class="form-control" />
        <span asp-validation-for="Course.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.AssignedTutorId"></label>
        <select asp-for="Course.AssignedTutorId" asp-items="Model.TutorList" class="form-control">
            <option value="">-- Select a Tutor --</option>
        </select>
        <span asp-validation-for="Course.AssignedTutorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
</form>