@page
@model SIMSProject.Pages.Courses.DeleteModel
@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>
<h3>Are you sure you want to delete @Model.Course.Title?</h3>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
</form>